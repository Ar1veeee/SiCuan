{
  "name": "sicuan-api",
  "version": "1.0.0",
  "main": "server.js",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/dotenv-safe": "^8.1.6",
    "@types/express": "^5.0.0",
    "@types/express-rate-limit": "^6.0.2",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.9",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.21.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^5.0.0",
    "@prisma/client": "^6.6.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "dotenv-safe": "^9.1.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.12.0",
    "ngrok": "^5.0.0-beta.2",
    "nodemailer": "^6.10.1",
    "prisma": "^6.4.1",
    "sib-api-v3-sdk": "^8.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "xss": "^1.0.15",
    "zod": "^3.24.2"
  },
  "scripts": {
    "start": "node build/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf build",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "deploy": "./deploy.sh",
    "deploy:function": "cd functions/email-processor && gcloud functions deploy processEmailQueue --runtime nodejs18 --trigger-topic email-notifications --source . --entry-point processEmailQueue --region asia-southeast2",
    "deploy:cloudrun": "gcloud run deploy sicuan-api --source . --region asia-southeast2 --allow-unauthenticated",
    "logs:function": "gcloud functions logs tail processEmailQueue --region=asia-southeast2",
    "logs:cloudrun": "gcloud run services logs tail sicuan-api --region=asia-southeast2",
    "setup:gcloud": "gcloud services enable pubsub.googleapis.com cloudfunctions.googleapis.com run.googleapis.com cloudbuild.googleapis.com",
    "create:topic": "gcloud pubsub topics create email-notifications"
  },
  "engines": {
    "node": ">=18.x",
    "npm": ">=9.x"
  },
  "keywords": [],
  "author": "Alief Arifin <aliefarifin99@gmail.com>",
  "license": "ISC",
  "description": "An Express-based RESTfull API for SiCuan mobile app"
}
